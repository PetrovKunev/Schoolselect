                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="ReviewModeration" asp-action="Index">Отзиви</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Notifications" asp-action="Index">Нотификации</a>
                        </li> *@
                    </ul>
                    <ul class="navbar-nav">
                        @* <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="notification-dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bell"></i>
                                <span id="notification-badge" class="badge rounded-pill bg-danger" style="display: none;">0</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end notification-dropdown-menu" aria-labelledby="notification-dropdown-toggle">
                                <div class="p-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">Известия</h6>
                                        <a href="#" id="markAllAsRead" class="btn btn-sm btn-link">Маркирай всички</a>
                                    </div>
                                    <div class="dropdown-divider"></div>
                                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                                        <span class="visually-hidden">Зареждане...</span>
                                    </div>
                                </div>
                            </div>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Към сайта</a>
                        </li>
                        @* <partial name="_LoginPartial" /> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - SchoolSelect - Всички права запазени
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/NotificationsAdmin.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>