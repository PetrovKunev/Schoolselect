@model SchoolSelect.Web.Areas.Admin.ViewModels.FormulaComponentViewModel

<div class="component-item card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Предмет</label>
                    <select asp-for="SubjectCode" class="form-select subject-code">
                        <option value="">-- Изберете предмет --</option>
                        @foreach (var subject in ViewBag.SubjectCodes)
                        {
                            <option value="@subject.Key" data-name="@subject.Value">@subject.Value (@subject.Key)</option>
                        }
                    </select>
                    <input type="hidden" asp-for="SubjectName" class="subject-name" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Тип</label>
                    <select asp-for="ComponentType" asp-items="ViewBag.ComponentTypes" class="form-select"></select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="mb-3">
                    <label class="form-label">Коефициент</label>
                    <input asp-for="Multiplier" class="form-control" type="number" step="0.1" min="0.1" max="10" value="1" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Описание</label>
                    <input asp-for="Description" class="form-control" />
                </div>
            </div>
            <div class="col-md-1">
                <div class="mb-3 d-flex align-items-end h-100">
                    <button type="button" class="btn btn-sm btn-danger remove-component">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>